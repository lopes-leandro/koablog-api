<%- include('../partials/header.ejs') -%>
<small style="display:flex; flex-direction: row;; justify-content: space-between; align-content: center;">
  <h2 class="title"><%= post.title%></h2>
  <a href="/" class="button is-text">Voltar</a>
</small>
<div class="columns">
  <div class="column is-2">
    <img src="<%= post.image %>" alt="<%= title %>">
    <h5 class="subtitle is-5">
      <small>por <%= post.author.fullName %></small>
    </h5>
    <% if (locals.user && (post.author.id == user._id)) { -%>
      <p>
        <small>
          <a href="/post/<%= post.id %>/edit" class="button is-primary">Editar Post</a>
        </small>
      </p>
      <% } -%>
  </div>
  <div class="column">
    <p><%= post.content %></p>
  </div>
</div>
<%- include('../partials/footer.ejs') -%>